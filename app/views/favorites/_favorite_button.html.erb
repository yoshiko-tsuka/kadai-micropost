<% unless current_user == micropost.user %>
  <% if current_user.favorite?(micropost) %>
    <%= form_tag(favorite_path(micropost.id), method: :delete) do%>
      <%= hidden_field_tag :micropost_id, micropost.id %>
      <%= submit_tag 'unfavorite', class: 'btn btn-danger btn-xs' %>
    <% end %>
  <% else %>
    <%= form_tag(favorites_path) do %>
      <%= hidden_field_tag :micropost_id, micropost.id %>
      <%= submit_tag 'favorite', class: 'btn btn-primary btn-xs' %>
    <% end %>
  <% end %>
<% end %>